{
  "name": "Stardust Profile Server",
  "short_name": "ProfileServ",
  "description": "Manages Stardust profiles and serves as a central data store.",
  "version": "0.2.0",
  "manifest_version": 2,
  "offline_enabled": true,
  "minimum_chrome_version": "45",
  "kiosk_enabled" : true,
  "app": {
    "background": {
      "scripts": [
        "vendor/bugsnag.js", "vendor/bcrypt.js", "vendor/wsc-chrome.js",
          "vendor/idb.js", "vendor/moment.js", "vendor/common-tags.js",
        "core/utils.js", "core/api-entries.js", "core/enumeration.js", "core/environment.js",
          "core/http-server.js", "core/nsexport.js", "core/platform-api.js",
        "core/mounts/idb-treestore.js", "core/mounts/fs-string-dict.js", "core/mounts/network-import.js",
          "core/mounts/tmp.js", "core/mounts/web-filesystem.js",
        "daemon/model/account-manager.js", "daemon/model/account.js",
          "daemon/model/domain-manager.js", "daemon/model/domain.js",
          "daemon/model/package-manager.js", "daemon/model/package.js",
          "daemon/model/session-manager.js", "daemon/model/session.js",
        "daemon/default-site.js", "daemon/gate-site.js", "daemon/gate-api.js", "daemon/domain-api.js",
        "daemon/background.js"]
    }
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "notifications",
    "browser",
    "power",
    "system.cpu",
    "system.display",
    "system.network",
    "system.memory",
    "system.storage",
    "background"
  ],
  "sockets": {
     "udp": {
       "send": [""],
       "bind": [""],
       "multicastMembership": ""
     },
     "tcp": {
       "connect": [""]
     },
     "tcpServer": {
       "listen": ["*:*"]
     }
  },
  "icons": {
    "16": "assets/stardust-16.png",
    "128": "assets/stardust-round-128.png"
  }
}
